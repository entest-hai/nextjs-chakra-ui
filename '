import {HStack, Box, Button } from '@chakra-ui/react'; 
import React, {useState } from 'react';


const ColorContext = React.createContext<any>(null)
const ColorContext = React.createContext<string>('blue')

const ButtonOne = () => {
  const color = React.useContext(ColorContext)
  const setColor = React.useContext(ControlContext)
  return (
    <Button
      colorScheme={color}
      onClick={setColor('tomato')}
    >
    Button 1
    </Button>
  ); 
}

const ButtonTwo = () => {
  const color = React.useContext(ColorContext)
  const setColor = React.useContext(ControlContext)
  return (
    <Button
      colorScheme={color}
      onClick={setColor('tomato')}
    >
    Button 2
    </Button>
  ); 
}


const Test = () => {

  const [color, setColor] = useState('tomato')
  const ControlContext = React.createContext<any>(setColor)
  
  return (
    <ControlContext.Provider value={setColor}>
      <ColorContext.Provider value='blue'>
        <Box width='100%' height='100vh'>
          <Box
            width='100%'
            height={96}
            bg={color}
            display='flex'
            alignItems='center'
            justifyContent='center'
            fontSize={50}
          >
            {color}
          </Box>
          <HStack spacing='20'>
            <ButtonOne></ButtonOne>
            <ButtonTwo></ButtonTwo>
          </HStack>
        </Box>
      </ColorContext.Provider>
    </ControlContext.Provider>
  ); 
}

export default Test; 
